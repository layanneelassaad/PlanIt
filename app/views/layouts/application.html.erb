<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>PlanIt</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg custom-bg text-white mb-3">
      <!-- <h1 class="title">PlanIt</h1> -->
      <%= link_to image_tag('logo.png', alt: 'PlanIt Logo', class: 'logo', style: 'width: 400px;'), '/'%> 
      <%= link_to 'Trips', trips_path, :class => 'btn btn-new', style: 'width: 150px;' %>
      <%= link_to 'Activities', activities_path, :class => 'btn btn-new ml-3', style: 'width: 150px;' %>
      </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
